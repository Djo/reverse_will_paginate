<%= form_for City.new do |f| %>
  <%= f.text_field :name, :placeholder => "New City" %>
  <%= f.submit 'Add' %>
<% end %>

<h2>Cities</h2>

<div id="cities_info">
  <%= @cities.offset + @cities.length %>..<%= @cities.offset + 1 %>
</div>

<ul>
  <% @cities.each do |city| %>
    <li><%= city.name %></li>
  <% end %>
</ul>

<%= will_paginate @cities, :renderer => 'ReverseLinkRenderer',
                           :previous_label => 'Next',
                           :next_label => 'Previous' %>
