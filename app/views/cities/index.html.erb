<%= form_for City.new do |f| %>
  <%= f.text_field :name, :placeholder => "New City" %>
  <%= f.submit 'Add' %>
<% end %>

<h2> Cities </h2>

<div id="page_entries_info">
  <%= page_entries_info @cities %>
</div>  

<ul>
  <% @cities.each do |city| %>
    <li><%= city.name %></li>
  <% end %>
</ul>

<%= will_paginate @cities %>
